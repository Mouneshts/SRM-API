        </div>



        <div class="col-md-4">



            <form asp-action="GetStudentResult">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div>
                    <div class="form-group">
                        <label asp-for="StudentId" class="control-label">Student Reg. No.</label>
                        <br />
                        <br />
                        <br />
                        <div>
                            <input asp-for="StudentId" class="form-control" />
                            <span asp-validation-for="StudentId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group" style="margin-top: 7px">
                    <div>
                        <div style="height: 35px;">
                            @Html.LabelFor(model => model.Semester, "Semester", htmlAttributes: new { @class = "control-label col-md-2" })
                        </div>
                        @Html.DropDownListFor(x => Model.Semester, new SelectList(ViewBag.semLiIst, "Value", "Text"), htmlAttributes: new { @class = "form-control", id = "Country" })
                        @Html.ValidationMessageFor(model => model.Semester, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="search" class="btn btn-primary" />
                </div>
            </form>
        </div>
