@model SRM_MVC.Models.Student

@{
    ViewData["Title"] = "AddStudent";
    Layout = "~/Views/Shared/AdminDashBoard.cshtml";
}

<h1>Register Student</h1>

<hr />


<div class="row">
    <div class="col-md-4">
        <form asp-action="AddStudent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @ViewBag.Error

            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                @Html.ValidationMessageFor(x => x.FirstName, "", new { @class = "text-danger" })
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                @Html.ValidationMessageFor(x => x.LastName, "", new { @class = "text-danger" })

                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentEmail" class="control-label"></label>
                <input asp-for="StudentEmail" class="form-control" />
                @Html.ValidationMessageFor(x => x.StudentEmail, "", new { @class = "text-danger" })

                <span asp-validation-for="StudentEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                @Html.ValidationMessageFor(x => x.PhoneNumber, "", new { @class = "text-danger" })

                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StudentGender" class="control-label"></label>
                <input asp-for="StudentGender" class="form-control" />
                @Html.ValidationMessageFor(x => x.StudentGender, "", new { @class = "text-danger" })

                <span asp-validation-for="StudentGender" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StudentPassword" class="control-label"></label>
                <input asp-for="StudentPassword" class="form-control" type="password" />
                @Html.ValidationMessageFor(x => x.FirstName, "", new { @class = "text-danger" })

                <span asp-validation-for="StudentPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Cid, "Course", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(x => Model.Cid, new SelectList(ViewBag.courseslist, "Value", "Text"), htmlAttributes: new { @class = "form-control", id = "Country" })
                    @Html.ValidationMessageFor(model => model.Cid, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(model => model.Semester, "Semester", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(x => Model.Semester, new SelectList(ViewBag.semlist, "Value", "Text"), htmlAttributes: new { @class = "form-control", id = "Country" })
                    @Html.ValidationMessageFor(model => model.Semester, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.BId, "Branch", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(x => Model.BId, new SelectList(ViewBag.brlist, "Value", "Text"), htmlAttributes: new { @class = "form-control", id = "Country" })
                    @Html.ValidationMessageFor(model => model.BId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Add student " class="btn btn-primary" />

            </div>
        </form>
    </div>
</div>

