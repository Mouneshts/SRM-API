@model SRM_MVC.Models.Result

@{
    ViewData["Title"] = "Add Result";
    Layout = "~/Views/Shared/AdminDashBoard.cshtml";

}

<h1>Add Result</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddResult">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                @Html.LabelFor(model => model.SemesterId, "Semester", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(x => Model.SemesterId, new SelectList(ViewBag.semlist, "Value", "Text"), htmlAttributes: new { @class = "form-control", id = "Country" })
                    @Html.ValidationMessageFor(model => model.SemesterId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.SId, "Student", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(x => Model.SId, new SelectList(ViewBag.studentlist, "Value", "Text"), htmlAttributes: new { @class = "form-control", id = "Country" })
                    @Html.ValidationMessageFor(model => model.SId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.SubjectId, "Subject", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(x => Model.SubjectId, new SelectList(ViewBag.subjectlist, "Value", "Text"), htmlAttributes: new { @class = "form-control", id = "Country" })
                    @Html.ValidationMessageFor(model => model.SubjectId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ResultScore" class="control-label">Result Score</label>
                <input asp-for="ResultScore" class="form-control" />
                <span asp-validation-for="ResultScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResultStatus" class="control-label"> Result Status</label>
                <input asp-for="ResultStatus" class="form-control" />
                <span asp-validation-for="ResultStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Result" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



